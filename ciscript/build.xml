<?xml version="1.0" encoding="utf-8"?>
<project name="ConsoleAnt" default="build" basedir=".">
	<target name="replace">
        <replaceregexp file="src/components/layout/footer.vue" match="%BUILDNUMBER%" replace="${build.number}" />
		<replaceregexp file="src/components/layout/footer.vue" match="%REVISION%" replace="${build.vcs.number}" />
	</target>

	<target name="install" depends="replace">
		<exec executable="/bin/sh" failonerror="true">
			<arg value="-c" />
			<arg value="yarn install" />
		</exec>
	</target>

	<target name="lint" depends="install">
		<exec executable="/bin/sh" failonerror="true">
			<arg value="-c" />
			<arg value="yarn lint" />
		</exec>
	</target>

	<target name="build" depends="lint">
		<exec executable="/bin/sh" failonerror="true">
			<arg value="-c" />
			<arg value="yarn build" />
		</exec>
	</target>
</project>
